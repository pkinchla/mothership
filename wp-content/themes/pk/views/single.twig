{% extends "base.twig" %}

{% block content %}
	<article class="post-type-{{post.post_type}} site-main site-content__default" id="post-{{post.ID}}">
		<figure class="wrapper hero-image">
			<img srcset="{{post.get_thumbnail.src | resize(2000)}} 2000w, {{post.get_thumbnail.src | resize(1200)}} 1200w, {{post.get_thumbnail.src | resize(600)}} 600w, {{post.get_thumbnail.src | resize(300)}} 300w, {{post.get_thumbnail.src | resize(150)}} 150w" src="{{post.get_thumbnail.src}}" sizes="(min-width:120em) 62vw, (min-width:64em) 72vw, (min-width:40em) 57vw, 100vw" alt="{{post.get_thumbnail.alt}}">
		</figure>
		<div class="wrapper article-content">
		<div class="site-content__default__body">
			<header class="entry-header">
				<h1 class="entry-title">{{post.title}}</h1>
				<div class="entry-meta">
					{{function('special_posted_on')}}
				</div>
			</header>
			<div class="entry-content">
				{{post.content}}
			</div>
			<footer class="entry-footer">
				{{function('special_entry_footer')}}
			</footer>
		</div>				
			{{post_nav}}
		</div>
		{{comments}}
	</article>
{% endblock %}
