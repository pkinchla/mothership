{% extends "base.twig" %}

{% block content %}
  <article class="post-type-{{post.post_type}} site-grid block" id="post-{{post.ID}}">
    <header class="entry-header">
      <h1 class="entry-title">{{post.title}}</h1>
      <div class="entry-meta">
        {{function('special_posted_on')}}
      </div>
    </header>
    <figure>
      <img data-thumb='{{post.get_thumbnail.src | resize(150)}}' srcset="{{post.get_thumbnail.src | resize(2000)}} 2000w, {{post.get_thumbnail.src | resize(1200)}} 1200w, {{post.get_thumbnail.src | resize(600)}} 600w, {{post.get_thumbnail.src | resize(300)}} 300w, {{post.get_thumbnail.src | resize(150)}} 150w" src="{{post.get_thumbnail.src}}" sizes="(min-width:120em) 62vw, (min-width:64em) 72vw, (min-width:40em) 66vw, 100vw" alt="{{post.get_thumbnail.alt}}">
    </figure>
    <div class="content">
      {{post.content}}
    </div>
    <footer class="entry-footer">
      {{function('special_entry_footer')}}
    </footer>
    {{post_nav}}
    {% if (function('comments_open')) or (function('get_comments_number')) %}
      {{ function( 'comments_template' ) }}
    {% endif %}
  </article>
{% endblock %}
