{% extends "base.twig" %}

{% block content %}
    <article class="post-type-{{post.post_type}} site-main site-content__about" id="post-{{post.ID}}">
      <figure class="wrapper hero-image">
        <img srcset="{{post.get_thumbnail.src | resize(2000)}} 2000w, {{post.get_thumbnail.src | resize(1200)}} 1200w, {{post.get_thumbnail.src | resize(600)}} 600w, {{post.get_thumbnail.src | resize(300)}} 300w, {{post.get_thumbnail.src | resize(150)}} 150w" src="{{post.get_thumbnail.src}}" sizes="(min-width:120em) 62vw, (min-width:64em) 72vw, (min-width:40em) 57vw, 100vw" alt="{{post.get_thumbnail.alt}}">
      </figure>
      <div class="wrapper">
        <h1 class="entry-title">{{post.title}}</h1>
        <div class="site-content__about__copy">
          {{post.content|wpautop}}
        </div>
        <div class="site-content__about__contact">
          {{post.contact}}
        </div>
        <section class="site-content__about__resume clearfix">
          <h2>R&eacute;sum&eacute;</h2>
          <a class="action" href="{{post.get_field('file_resume').url}}" download>Download</a>
          <dl class="resume clearfix">
            <dt>Work</dt>
            {% for job in post.get_field('work') %}
              <dd>
                <h3>
                {{job.title}}
                  <span>
                    <time datetime="{{job.date_start}}">{{job.date_start}}</time>
                    {% if job.date_end %}
                      <time datetime="{{job.date_end}}"> &ndash; {{job.date_end}}</time>
                    {% else %}
                      &ndash; present
                    {% endif %}
                  </span>
                </h3>
                <span class="company-name">{{job.company_name}}</span>
                <p>{{job.description}}<em><a href="http://{{job.company_link}}" target="_blank">{{job.company_link_text}}</a></em></p>
              </dd>
            {% endfor %}
            <dt>Internship</dt>
            {% for gig in post.get_field('internship') %}
              <dd>
                <h3>{{gig.title}}  <span><time datetime="{{gig.date}}">{{gig.date}}</time></span></h3>
                <span class="internship-location">{{gig.location}}</span> 
              </dd>
            {% endfor %}
            <dt>Skill</dt>
              <dd><p>{{post.skill}}</p></dd>
            <dt>Education</dt>
              <dd>
              {% for school in post.get_field('education') %}
                <h3>{{school.school}}  <span>{{school.degree}}</span></h3>
              {% endfor %}
              </dd>  
            <dt>Interest</dt>
              <dd>
                <ul>
                  {% for hobby in post.get_field('interest') %}
                    <li>{{hobby.item_of_interest}}</li>
                  {% endfor %}
                </ul>
              </dd>
          </dl>
        </section>
        <div class="site-content__about__picture">
          <h2 class="screen-reader-text">Instagram Feed</h2>
          {{post.flickr_field}}
          <ul class="photo-feed">
            {% for picture in pictures.items %}
            {% if loop.index < 21 %}
              <li>
                <img src="{{picture.images.thumbnail.url}}" alt="{{ (picture.caption) ? picture.caption.text : 'instagram thumbnail' }}">
              </li>
            {% endif %}
            {% endfor %}
          </ul>
        </div>
      </div>
    </article>
{% endblock %}