{% extends "base.twig" %}

{% block content %}
  <article>
    {% if posts is empty %}
      <header>
        <h1>No Results</h1>
      </header>
      <figure>
        <img src="{{theme.path}}/images/cham.jpg" alt="metallic chameleon">
      </figure>
      <p class="search-message">Sorry, no results matched your query, maybe try again</p>
      {% include 'searchform.twig' %}
    {% else %}
      <header>
        <h1>{{title}}</h1>
      </header>
      <figure>
        <img src="{{theme.path}}/images/cham.jpg" alt="metallic chameleon">
      </figure> 
      <section>
        <h2>Results</h2>
        {% for post in posts %}
          {% include ['tease-'~post.post_type~'.twig', 'tease.twig'] %}
        {% endfor %}
      </section>
    {% endif %}
  </article>
{% endblock %}