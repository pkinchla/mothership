{% extends "base.twig" %}
{% block content %}
  <article class="post-type-{{post.post_type}} site-grid block" id="post-{{post.ID}}">
    <header>
      <h1 tabindex="-1">{{post.title}}</h1>
    </header>
    <figure>
      <img
        srcset="{{post.get_thumbnail.src | resize(2000)}} 2000w, {{post.get_thumbnail.src | resize(1200)}} 1200w, {{post.get_thumbnail.src | resize(600)}} 600w, {{post.get_thumbnail.src | resize(300)}} 300w, {{post.get_thumbnail.src | resize(150)}} 150w"
        src="{{post.get_thumbnail.src}}"
        sizes="(min-width: 2760px) 1339px, (min-width: 1920px) calc(32.93vw + 437px), (min-width: 640px) 66.43vw, 100vw"
        alt="{{post.get_thumbnail.alt}}"
      >
    </figure>
    <section class="portfolio">
      <h2 class="assistive-text">Portfolio Items</h2>
      <ul>
        {% for post in portfolio_posts %}
          <li>
            <a href="{{post.link}}">
              <h3>
                <span>{{post.title}}</span>
                <span class="assistive-text">, project category is</span>
                <em>{{post.post_excerpt}}</em>
              </h3>
              <img src="{{TimberImage(post.get_field('list_image')).src}}" srcset="" sizes="(min-width:120em) 14vw, (min-width:64em) 20vw, (min-width:40em) 30vw, 90vw" alt="">
            </a>
          </li>
        {% endfor %}
      </ul>
    </section>
  </article>
{% endblock %}