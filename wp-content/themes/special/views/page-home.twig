{% extends "base.twig" %}
{% block content %}
  <figure class='site-content__home__hero'>
    <span class="alpha">{{post.title}}</span>
    <img srcset="{{post.get_thumbnail.src | resize(3000)}} 3000w, {{post.get_thumbnail.src | resize(2000)}} 2000w, {{post.get_thumbnail.src | resize(1200)}} 1200w, {{post.get_thumbnail.src | resize(600)}} 600w, {{post.get_thumbnail.src | resize(300)}} 300w, {{post.get_thumbnail.src | resize(150)}} 150w" src="{{post.get_thumbnail.src}}" sizes="100vw" alt="{{post.get_thumbnail.alt}}">
  </figure>
  <article class="post-type-{{post.post_type}} wrapper home-page-section" id="post-{{post.ID}}">
    <div class="site-content__home__copy">
      <h1 class='screen-reader-text'>Home Page</h1>
      {{post.content}}
    </div>
    <div class="site-content__home__blog">
      <h2>Latest Writing</h2>
      {% for post in home_post %}      
        <h3><a class="linked-header" href="{{post.link}}">{{post.title}}</a></h3>
        <div class="entry-meta"><time datetime="{{post.date|date('c')}}">{{post.date|date('l, F jS, Y')}}</time></div>
      {% endfor %}
    </div>
  </article>
{% endblock %}