{% extends "base.twig" %}
{% block content %}
  <article class="post-type-{{post.post_type}} site-main site-content__portfolio__single" id="post-{{post.ID}}">
      <figure class="wrapper hero-image">
        <img srcset="{{post.get_thumbnail.src | resize(2000)}} 2000w, {{post.get_thumbnail.src | resize(1200)}} 1200w, {{post.get_thumbnail.src | resize(600)}} 600w, {{post.get_thumbnail.src | resize(300)}} 300w, {{post.get_thumbnail.src | resize(150)}} 150w" src="{{post.get_thumbnail.src}}" sizes="(min-width:120em) 62vw, (min-width:64em) 72vw, (min-width:40em) 57vw, 100vw" alt="{{post.get_thumbnail.alt}}">
      </figure>
      <div class="wrapper">
        <h1 class="entry-title">{{post.title}}</h1>
        {% if post.main_image_square %}
        <div class="portfolio__single__copy--print">
          {{post.content}}
          <strong>Filed in: {{post.post_excerpt}}</strong>
        </div>
        <div class="portfolio__single__image--print">
            <img src="{{TimberImage(post.get_field('main_image_square')).src}}" srcset="" sizes="(min-width:64em) 66vw, (min-width:40em) 85vw, 90vw" alt="<?php echo $alt_square ?>">
            <a class="action back-link" href="/portfolio/">&larr; Back to List</a>
          {% if post.square_image_optional %}
            <img src="{{TimberImage(post.get_field('main_image_square_optional')).src}}" srcset=" 1300w, 800w,  550w" sizes="(min-width:64em) 66vw, (min-width:40em) 85vw, 90vw" alt="<?php echo $alt_square_opt; ?>"
            <a class="action back-link" href="/portfolio/">&larr; Back to List</a>
          {% endif %} 
        </div>
        {% else %}
        <div class="portfolio__single__copy--phone">
          {{post.content}}
          <strong>Filed in: {{post.post_excerpt}}</strong>
        </div>
        <div class="portfolio__single__image--phone">    
          <img src="{{TimberImage(post.get_field('main_image_rectangle')).src}}" alt="{{TimberImage(post.get_field('main_image_rectangle')).src}}" />
          <a class="action back-link" href="/portfolio/">&larr; Back to List</a>
        </div>   
        {% endif %}
        </div>
      </div>
    </article>
{% endblock %}